{
    "manifest_version": 3,
    "name": "ChromeCoPilot",
    "version": "0.0.1",
    "action": { },
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "host_permissions": [
        "http://localhost:8000/*"
    ],
    "omnibox": {
        "keyword": "/"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "cookies",
        "identity",
        "scripting",
        "sidePanel",
        "storage",
        "tabs"
    ],
    "side_panel": {
        "default_path": "side-panel/index.html"
    }
}